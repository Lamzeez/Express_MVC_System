<%- include("../partials/header", { title: "Register" }) %>

<div class="card" style="max-width:520px;margin:18px auto;">
  <h2>Create account</h2>

  <% if (error) { %>
    <div class="alert"><%= error %></div>
  <% } %>

  <form action="/auth/register" method="POST" class="form">
    <label>
      Name
      <input type="text" name="name" required minlength="2" maxlength="80"
             value="<%= values.name %>" placeholder="Your name" />
    </label>

    <label>
      Email
      <input type="email" name="email" required value="<%= values.email %>" placeholder="you@example.com" />
    </label>

    <label>
      Password (min 6)
      <input type="password" name="password" required minlength="6" placeholder="••••••" />
    </label>

    <label>
      Confirm Password
      <input type="password" name="confirm_password" required minlength="6" placeholder="••••••" />
    </label>

    <button class="btn" type="submit">Register</button>
    <p class="muted" style="margin:6px 0 0;">
      Already have an account? <a href="/auth/login" style="text-decoration:underline;">Login</a>
    </p>
  </form>
</div>

<%- include("../partials/footer") %>
